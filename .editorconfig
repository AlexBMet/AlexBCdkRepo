root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = tab
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
insert_final_newline = false

[*.{json,yaml,yml}]
indent_size = 4
indent_style = space

[COMMIT_EDITMSG]
max_line_length = 0
