{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"baseUrl": "./",
		"typeRoots": [
			"node_modules/@types"
		],
		"types": [
			"node",
			"jest"
		],
		"esModuleInterop": true,
		"inlineSourceMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts"
	]
}
